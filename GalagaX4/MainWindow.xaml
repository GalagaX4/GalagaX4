<Window x:Class="GalagaX4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalagaX4"
        mc:Ignorable="d"
        Title="Galaga X4" Height="650" Width="860" Background="Black" Icon="pics/galaga_ship.ico">
    <Grid>
        <Button x:Name="NewGameBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="266" Height="61" Margin="297,333,0,0" Click="button_Click" BorderBrush="{x:Null}" FontSize="36" Foreground="{x:Null}" Background="{x:Null}">
            <Image x:Name="newGamePic" Source="pics/newGame_lightBlue.png"/>
        </Button>
        <Image x:Name="titlePic" HorizontalAlignment="Left" Height="123" Margin="123,165,0,0" VerticalAlignment="Top" Width="613" Source="pics/GameTitle_lightBlue.png"/>
        <Button x:Name="LoadBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="266" Height="61" Margin="297,482,0,0" Content="Load Game" Click="loadingGame"/>


    </Grid>
</Window>
